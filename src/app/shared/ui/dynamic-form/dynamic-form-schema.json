{
    "$schema": "http://json-schema.org/schema",
    "$id": "form-schema.json",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "sections",
        "controls"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "sections": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "displayName": {
                        "type": "string"
                    },
                    "controls": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "controls": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "title": "text",
                        "$ref": "#/definitions/text"
                    },
                    {
                        "title": "number",
                        "$ref": "#/definitions/number"
                    },
                    {
                        "title": "icon",
                        "$ref": "#/definitions/icon"
                    },
                    {
                        "title": "date",
                        "$ref": "#/definitions/date"
                    }
                ]
            }
        }
    },
    "definitions": {
        "text": {
            "$id": "/definitions/text",
            "$schema": "http://json-schema.org/schema",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "slug",
                "name",
                "type"
            ],
            "properties": {
                "type": {
                    "const": "text"
                },
                "slug": {
                    "type": "string",
                    "pattern": "^[a-z0-9-_]+"
                },
                "name": {
                    "type": "string"
                },
                "defaultValue": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "placeholder": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "number": {
            "$id": "/definitions/number",
            "$schema": "http://json-schema.org/schema",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "slug",
                "name",
                "type"
            ],
            "properties": {
                "type": {
                    "const": "number"
                },
                "slug": {
                    "type": "string",
                    "pattern": "^[a-z0-9-_]+"
                },
                "name": {
                    "type": "string"
                },
                "decimalPoints": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "formatAs": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "defaultValue": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "placeholder": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "icon": {
            "$id": "/definitions/icon",
            "$schema": "http://json-schema.org/schema",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "slug",
                "name",
                "type"
            ],
            "properties": {
                "type": {
                    "const": "icon"
                },
                "slug": {
                    "type": "string",
                    "pattern": "^[a-z0-9-_]+"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "date": {
            "$id": "/definitions/date",
            "$schema": "http://json-schema.org/schema",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "slug",
                "name",
                "type"
            ],
            "properties": {
                "type": {
                    "const": "date"
                },
                "slug": {
                    "type": "string",
                    "pattern": "^[a-z0-9-_]+"
                },
                "name": {
                    "type": "string"
                },
                "defaultValue": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "includeTime": {
                    "type": [
                        "boolean",
                        "null"
                    ]
                }
            }
        }
    }
}